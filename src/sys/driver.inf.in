[Version]
Signature = "$WINDOWS NT$"
Class = SCSIAdapter
ClassGuid = {4d36e97b-e325-11ce-bfc1-08002be10318}
CatalogFile.ntx86 = !BaseName!-x86.cat
CatalogFile.ntamd64 = !BaseName!-x64.cat
Provider = %MyCompanyName%

[Manufacturer]
%MyCompanyName% = model,ntx86,ntamd64

[model.ntx86]
%MyDescription% = install,%HardwareId%

[model.ntamd64]
%MyDescription% = install,%HardwareId%

[install.ntx86]
CopyFiles = files-x86

[install.ntamd64]
CopyFiles = files-x64

[files-x86]
!BaseName!-x86.sys
!BaseName!-x86.dll

[files-x64]
!BaseName!-x64.sys
!BaseName!-x64.dll

[SourceDisksFiles]
!BaseName!-x86.sys = 1
!BaseName!-x86.dll = 1
!BaseName!-x64.sys = 1
!BaseName!-x64.dll = 1

[SourceDisksNames]
1 = %MyDescription%

[DestinationDirs]
sys.CopyFiles = 12
dll.CopyFiles = 11

[Strings]
MyProductName = !MyProductName!
MyDescription = !MyDescription!
MyCompanyName = !MyCompanyName!
MyCopyright = !MyCopyright!
MyVersion = !MyVersion!
HardwareId = !HardwareId!
